{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"paths": {
			"@types/*": ["@types/*"]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./@types" // Adicione esta linha
		]
	},
	"include": ["src/**/*.ts", "@types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
